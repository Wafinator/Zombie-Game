public class Bullet {
    private double x, y, velX, velY;
    private boolean active=true;
    public Bullet(double x, double y, double ang) {
        this.x = x;
        this.y = y;
        velX=5*Math.cos(ang);
        velY=5*Math.sin(ang);
    }

    public void move(){
        x+=velX;
        y+=velY;
        if(x<0||x>1100||y<0||y>1100){
            active=false;
        }
    }

    public boolean isActive(){
        return active;
    }

    public void hit(){
        active=false;
    }

    public int getX() { return (int) x; }

    public int getY() { return (int) y; }
}